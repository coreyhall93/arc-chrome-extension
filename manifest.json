{
  "manifest_version": 3,
  "name": "Arc Sidebar for Chrome",
  "version": "0.1.0",
  "description": "Chrome extension that recreates Arc Browser's core sidebar functionality",
  "permissions": [
    "tabs",
    "storage",
    "sidePanel",
    "contextMenus"
  ],
  "side_panel": {
    "default_path": "sidepanel/panel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Arc Sidebar"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
